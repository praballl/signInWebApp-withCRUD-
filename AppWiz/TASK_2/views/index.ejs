  <div class="b-form">
    <h1>Form</h1>
    <form action="" method="post">
      <div class="mb-3">
        <label class="form-check-label" for="name">Name</label><br>
        <input type="text" name="inputName" class="form-control" id="name-input" required>
      </div>
      <div class="mb-3">
        <label for="email-input" class="form-label">Email address</label><br>
        <input type="email" name="inputEmail" class="form-control" id="email-input" aria-describedby="emailHelp"
          required>
      </div>
      <div class="mb-3">
        <label for="pass-input" class="form-label">Password</label><br>
        <input type="password" name="inputPass" class="form-control" id="pass-input" minlength="8" required>
      </div>
      <button id="add-name-btn" type="submit" class="btn btn-dark">Add details</button>
    </form>

  </div>

</body>

